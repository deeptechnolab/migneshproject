---
interface Props {
  path: string;
  head: string;
  para: string;
}

const { para, path, head } = Astro.props;
---

<div
  class="flex flex-col sm:flex-row justify-between apce gap-5 max-[1024]:text-center"
>
  <div>
    <img class="max-w-[200px] " src={path} alt="" />
  </div>
  <div>
    <h3 class="purple">{head}</h3>
    <p class="ptag">{para}</p>
  </div>
</div>
<style>
  .purple {
    color: #48389c;
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 40px;
    letter-spacing: 0.32px;
  }
  .ptag {
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      letter-spacing: 0.01em;
      text-align: left;
    }
</style>
